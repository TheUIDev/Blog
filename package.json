{
  "name": "theuidev",
  "version": "1.0.0",
  "description": "Playing catch with the ever changing world of front end tech",
  "author": "Shreerang Patwardhan",
  "private": true,
  "config": {
    "nuxt": {
      "port": "3001"
    }
  },
  "scripts": {
    "dev": "npm run md2json && cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "md2json": "m2j -c content/blogposts/*.md -o static/blogposts.json",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/markdownit": "^1.2.6",
    "@nuxtjs/pwa": "^3.0.0-beta.17",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "markdown-to-json": "^0.5.1",
    "nuxt": "^2.15.8",
    "vue-infinite-loading": "^2.4.4",
    "vue-social-sharing": "^2.4.6"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/vuetify": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.6.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "push-dir": "^0.4.1",
    "vue-jest": "^4.0.0-0"
  }
}
